{
	"tasks": {
		"build_main": "tsc -p ./src/main",
		"build_meowfficer": "tsc -p ./src/meowfficer",
		"build": "deno task build_main & deno task build_meowfficer"
	},
	"lint": {
		"files": {
			"include": ["./src"]
		},
		"rules": {
		  "tags": ["recommended"],
		  "include": [],
		  "exclude": ["require-await"]
		}
	},
	"fmt": {
		"files": {
			"include": ["./src"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 160,
			"singleQuote": true
		}
	}
}
